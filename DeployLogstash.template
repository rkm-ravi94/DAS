job('{{LABEL}}-Setup-Logstash-Job') {
        parameters {
     	extendedChoiceParameterDefinition {
          name('Deployment_Group' )
          type('Single Select' )
          propertyFile('/var/lib/jenkins/inventory.Properties')
          propertyKey('key')
          defaultValue('targets')
          defaultPropertyFile('')
          value('')
          defaultPropertyKey('') 
          quoteValue(false)
          visibleItemCount(5) 
       	  description('')
          multiSelectDelimiter('')
          bindFieldName('')
          svnPath(false)
          svnUrl('')
          svnUserName('')
          svnPassword('')
          projectName('')
          roleBasedFilter(false)
        }
    stringParam('Elasticsearch_ip')

        }
    label('{{LABEL}}')
scm {
     git {
        remote {
            
            url('https://github.com/opstree-ansible/osm_logstash.git')
        }
        branch('*/master')
        extensions {
            relativeTargetDirectory("""/etc/ansible/roles/logstash/""")
        }
    }
}
  steps {
    shell(

    '#!/bin/bash\n'  +
    
    'echo "Run Ansible playbook"\n'  +

     'export ANSIBLE_HOST_KEY_CHECKING=False\n' +    
    'ansible-playbook  /etc/ansible/roles/logstash/site.yml --extra-var "host=${Deployment_Group} Elasticsearch_ip=${Elasticsearch_ip}}"\n'

    )
}
}
